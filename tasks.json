{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run on File Change",
        "type": "shell",
        "command": "node",
        "args": ["src"],  // Replace with your actual script file
        "isBackground": true,
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "reveal": "always"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": {
          "owner": "custom",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+)(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          }
        },
        "runOptions": {
          "runOn": "fileChange"
        }
      }
    ]
  }